<script type="text/template" id="buttonTemplate">
	<div class="tabContainer">
		<ul class="nav nav-pills">
			<% _.each(buttons, function(item){ %>
                    <% if (item.subButtons){ %>
                    <li class="dropdown">
                        <a url="<%= item.url %>" type="<%= item.value %>" class="dropdown-toggle" data-toggle="dropdown">
                            <%= item.text %>
                            <b class="caret"></b>
                        </a>
                        
                        <ul class="dropdown-menu">
                            <% _.each(item.subButtons, function(subItem){ %>                                
                                <li>
                                    <a url="<%= subItem.url %>" value="<%= subItem.value %>" class="tab-link" href="#">
                                        <%= subItem.text %>
                                    </a>
                                </li>
                            <% }) %>	
                        </ul>
                    </li>
                    <% } else { %>
                        <li>
                            <a href="#" class="tab-link">
                                <%= item.text %>
                            </a>
                        </li>
                    <%}%>
			<% }) %>			
		</ul>
	</div>
</script>

<script type="text/template" id="tbodyTemplate">
	<% _.each(items, function(item){%>
	<tr class="sstable-row">
		<% _.each(columns, function(col){%>
		    <td><%= item[col.row] %></td>
		<% }) %>

		<% _.each(actions, function(act){ %>
		    <td class="sstable-action" 
                data-value="<%= item[act.row] %>" 
                data-url="<%= act.url %>">
                <%= act.icon %>
		    </td>
		<% }) %>
	</tr>
	<% }) %>
</script>

<script type="text/template" id="tableTemplate">
	<table class="sstable">
		<thead class="sstable-head">
		<% _.each(columns, function(col){%>
		    <th  style="width:<%= col.width %>" class="sstable-sort" value="<%= col.row %>" ><%= col.text %></th>
		<% }) %>
		<% _.each(actions, function(act){%>
		    <th><%= act.text %></th>
		<% }) %>
		</thead>
		<tbody>	</tbody>
	</table>
    <div id="pager"></div>
</script>

<script type="text/template" id="pagerTemplate">
	<% if (pages.length > 1) { %>

        <ul class ="pagination">

            <li class="<%=prev%>"><a href="#">&laquo;</a></li>

            <% _.each(pages, function(page) { %>

                <% if (page == start) { %>

                    <li class="active"><a href="#"><%=page%></a></li>

                <% } else { %>

                    <li><a class="page" href="#"><%=page%></a></li>

                <% } %>

            <% })%>

            <li class="<%=next%>"><a href="#">»</a></li>

        </ul>
    <% }%>
</script>